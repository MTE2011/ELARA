# Discord Bot Token (Required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Bot Owner ID (Required)
# Your Discord user ID - used for owner-only commands
OWNER_ID=your_discord_user_id_here

# Default Bot Prefix (Optional)
# Default prefix for text commands (slash commands are primary)
PREFIX=!

# MongoDB Connection String (Optional)
# If not provided, bot will use JSON file storage
MONGODB_URI=mongodb://localhost:27017/elara

# Session Secret (Optional)
# Used for session management and encryption
SESSION_SECRET=your_random_secret_here

# Default Embed Color (Optional)
# Hex color code for embeds (default: #5865F2 - Discord Blue)
EMBED_COLOR=#5865F2

# Environment (Optional)
# Set to 'production' or 'development'
NODE_ENV=development

# Log Level (Optional)
# Set to 'debug', 'info', 'warn', or 'error'
LOG_LEVEL=info
